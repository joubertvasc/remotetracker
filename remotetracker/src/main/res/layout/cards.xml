<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/generic_solid_flat_shape_blue"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tvTitleNewBeer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/cards"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/svCards"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llMainCards0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llMainCards1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tvCard1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msgCard1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/llCard1"
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llCard1v"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard1IMSI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgIMSI" />

                    <EditText
                        android:id="@+id/etCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/ibCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card_chip" />

                    <ImageButton
                        android:id="@+id/ibClear1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clear" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ilCard1v2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard1Alias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgAlias" />

                    <EditText
                        android:id="@+id/etAlias1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textPersonName" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMainCards2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tvCard2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msgCard2"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/llCard2"
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llCard2v"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard2IMSI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgIMSI" />

                    <EditText
                        android:id="@+id/etCard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/ibCard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card_chip" />

                    <ImageButton
                        android:id="@+id/ibClear2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clear" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ilCard2v2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard2Alias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgAlias" />

                    <EditText
                        android:id="@+id/etAlias2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textPersonName" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMainCards3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tvCard3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msgCard3"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/llCard3"
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llCard3v"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard3IMSI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgIMSI" />

                    <EditText
                        android:id="@+id/etCard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/ibCard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card_chip" />

                    <ImageButton
                        android:id="@+id/ibClear3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clear" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ilCard3v2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard3Alias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgAlias" />

                    <EditText
                        android:id="@+id/etAlias3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textPersonName" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMainCards4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tvCard4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msgCard4"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/llCard4"
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llCard4v"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard4IMSI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgIMSI" />

                    <EditText
                        android:id="@+id/etCard4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/ibCard4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card_chip" />

                    <ImageButton
                        android:id="@+id/ibClear4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clear" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ilCard4v2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCard4Alias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msgAlias" />

                    <EditText
                        android:id="@+id/etAlias4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCard4h"
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>