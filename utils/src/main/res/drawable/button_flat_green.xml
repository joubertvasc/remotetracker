<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#7cd57c" />

            <gradient android:angle="-90" android:endColor="#7cd57c" android:startColor="#5CB85C" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#7cd57c" />

            <solid android:color="#7cd57c" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#5CB85C" />

            <gradient android:angle="-90" android:endColor="#5CB85C" android:startColor="#7cd57c" />
        </shape></item>

</selector>