<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#7edcf8" />

            <gradient android:angle="-90" android:endColor="#7edcf8" android:startColor="#5BC0DE" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#7edcf8" />

            <solid android:color="#7edcf8" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#5BC0DE" />

            <gradient android:angle="-90" android:endColor="#5BC0DE" android:startColor="#7edcf8" />
        </shape></item>

</selector>