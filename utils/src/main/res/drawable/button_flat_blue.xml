<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#64aceb" />

            <gradient android:angle="-90" android:endColor="#64aceb" android:startColor="#428BCA" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#64aceb" />

            <solid android:color="#64aceb" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#428BCA" />

            <gradient android:angle="-90" android:endColor="#428BCA" android:startColor="#64aceb" />
        </shape></item>

</selector>