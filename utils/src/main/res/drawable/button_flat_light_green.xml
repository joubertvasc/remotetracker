<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#c4f2c4" />

            <gradient android:angle="-90" android:endColor="#c4f2c4" android:startColor="#92CE92" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#c4f2c4" />

            <solid android:color="#c4f2c4" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#92CE92" />

            <gradient android:angle="-90" android:endColor="#92CE92" android:startColor="#c4f2c4" />
        </shape></item>

</selector>