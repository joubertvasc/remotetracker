<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#f3c483" />

            <gradient android:angle="-90" android:endColor="#f3c483" android:startColor="#F0AD4E" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#f3c483" />

            <solid android:color="#f3c483" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#F0AD4E" />

            <gradient android:angle="-90" android:endColor="#F0AD4E" android:startColor="#f3c483" />
        </shape></item>

</selector>