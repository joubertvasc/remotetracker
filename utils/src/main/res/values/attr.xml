<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <attr name="Corners" format="enum">
        <enum name="Rounded" value="0" />
        <enum name="Flat" value="1" />
    </attr>
    <attr name="Background_Color" format="enum">
        <enum name="Blue" value="0" />
        <enum name="Green" value="1" />
        <enum name="Orange" value="2" />
        <enum name="Red" value="3" />
        <enum name="Light_Blue" value="4" />
        <enum name="Light_Green" value="5" />
    </attr>

    <declare-styleable name="CustomButton">
        <attr name="Corners" />
        <attr name="Background_Color" />
        <attr name="android:textColor"/>
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="Corners" />
        <attr name="Background_Color" />
        <attr name="android:textColor"/>
    </declare-styleable>

    <declare-styleable name="CustomLinearLayout">
        <attr name="Corners" />
        <attr name="Solid" format="boolean"/>
        <attr name="Background_Color" />
    </declare-styleable>

</resources>